
{% extends 'base.html.twig' %}

{% block body %}
<div id="wrapper">
<div id="container">
<h1> Login Page </h1>
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('login') }}" method="post">
    <label for="username">Username:</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" />
	<br>

    <label for="password">Password:</label>
    <input type="password" id="password" name="_password" />

    <button type="submit">Login</button>
</form>
<h3><a href="/">Return to Homepage</a></li> </h3>


<style>
    body { background: #085A8B; font: 18px/1.5 sans-serif; }
    h1, h2 { line-height: 1.2; margin: 0 0 .5em; }
    h1 { font-size: 36px; }
    h2 { font-size: 21px; margin-bottom: 1em; }
    code { background: #F5F5F5; max-width: 100px; padding: 2px 6px; word-wrap: break-word; }
    #wrapper { background: #FFF; margin: 1em auto; max-width: 800px; width: 95%; 	box-shadow: 1px 1px 25px rgba(0, 0, 0, 0.35);  border-radius: 5px;     border: 3px solid #2E2E2E;}
    #container { padding: 2em; }
    #welcome, #status { margin-bottom: 2em; }
    #welcome h1 span { display: block; font-size: 75%; }
 
</style>

{% endblock %}

